<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/background_primary"

    android:contentInsetEnd="10dp"
    android:contentInsetLeft="10dp"
    android:contentInsetRight="10dp"
    android:contentInsetStart="10dp"
    app:contentInsetEnd="10dp"
    app:contentInsetLeft="10dp"
    app:contentInsetRight="10dp"
    app:contentInsetStart="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"

            android:contentDescription="@string/description_back_button"

            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:tint="@color/text_primary" />

        <ImageView
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:contentDescription="@string/description_positive_button"

            android:src="@drawable/ic_positive"
            android:visibility="gone"
            app:tint="@color/positive_color" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:contentDescription="@string/description_add_button"

            android:src="@drawable/ic_add"
            android:visibility="gone"
            app:tint="@color/positive_color" />

        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:contentDescription="@string/description_remove_button"

            android:src="@drawable/ic_remove"
            android:visibility="gone"
            app:tint="@color/negative_color" />

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_button"

            android:text="@string/global_short_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_size_large" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>

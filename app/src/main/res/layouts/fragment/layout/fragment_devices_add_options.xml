<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/fragment_content_horizontal_spacing"
    android:paddingVertical="@dimen/fragment_content_vertical_spacing"
    tools:context=".ui.advanced.devices.view.AddDeviceOptionsFragment">

    <Button
        android:id="@+id/add_device_options_pair_new_button"
        style="@style/RegularButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/button_devices_add_pair_new"
        android:textColor="@color/positive_color" />

    <Button
        android:id="@+id/add_device_options_already_paired_button"
        style="@style/RegularButtonStyle.Disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_device_options_pair_new_button"
        android:layout_marginTop="@dimen/fragment_content_vertical_spacing"
        android:text="@string/button_devices_add_already_paired" />

    <Button
        android:id="@+id/add_device_options_cancel_button"
        style="@style/RegularButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/add_device_options_already_paired_button"
        android:layout_marginTop="@dimen/fragment_content_vertical_spacing"
        android:text="@string/button_cancel"
        app:icon="@drawable/ic_cancel"
        app:iconTint="@color/negative_color" />

</RelativeLayout>
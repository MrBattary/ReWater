<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devices_schedules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.advanced.devices.view.ScheduleListDeviceFragment">

    <ListView
        android:id="@+id/devices_schedules_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" />

    <include
        android:id="@+id/devices_schedules_not_found"
        layout="@layout/view_placeholder_not_found_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>
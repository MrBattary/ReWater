<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/networks_recycler_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.networks.NetworksFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/networks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/networks_add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/description_networks_add_fab"
        android:backgroundTint="@color/background_tertiary"
        app:backgroundTint="@color/background_tertiary"
        app:tint="@color/positive_color"
        android:src="@drawable/ic_add" />
</FrameLayout>
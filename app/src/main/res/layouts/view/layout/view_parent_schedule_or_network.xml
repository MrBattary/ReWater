<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/parent_schedule_or_network_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/description_parent_schedule_or_network_icon"
        android:src="@drawable/ic_pointing_arrow_neutral" />

    <TextView
        style="@style/CustomTextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/parent_schedule_or_network_icon"
        android:text="@string/global_medium_placeholder" />

</RelativeLayout>
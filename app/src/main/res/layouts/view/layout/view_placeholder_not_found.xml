<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/not_found"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/not_found_permanent_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/description_emptiness_icon"
        android:src="@drawable/ic_empty_box" />

    <TextView
        android:id="@+id/not_found_permanent_text"
        style="@style/CustomTextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/not_found_permanent_icon"
        android:text="@string/placeholder_emptiness_temporary"
        android:textColor="@color/text_tertiary" />
</RelativeLayout>
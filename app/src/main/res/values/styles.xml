<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom navigation bar. -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/background_secondary</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
    </style>
    <!-- Text styles -->
    <style name="CustomText">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CustomTextMedium" parent="CustomText">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="CustomTextLarge" parent="CustomText">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="CustomTextSmall" parent="CustomText">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
</resources>
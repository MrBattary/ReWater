    <style name="CustomTextLarge" parent="CustomText">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="CustomTextSmall" parent="CustomText">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
</resources>